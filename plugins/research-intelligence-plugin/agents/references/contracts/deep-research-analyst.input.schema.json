{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "deep-research-analyst input",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "topic",
    "scope",
    "constraints",
    "required_citations"
  ],
  "properties": {
    "topic": {
      "type": "string",
      "minLength": 1
    },
    "scope": {
      "type": "string",
      "minLength": 1
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "required_citations": {
      "type": "boolean"
    }
  }
}
