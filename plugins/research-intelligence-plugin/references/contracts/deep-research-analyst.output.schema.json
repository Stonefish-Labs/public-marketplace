{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "deep-research-analyst output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "summary",
    "key_entities",
    "evidence_table",
    "open_questions"
  ],
  "properties": {
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "key_entities": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type",
          "name",
          "relevance"
        ],
        "properties": {
          "type": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "relevance": {
            "type": "string"
          }
        }
      }
    },
    "evidence_table": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "claim",
          "evidence",
          "citation",
          "confidence"
        ],
        "properties": {
          "claim": {
            "type": "string"
          },
          "evidence": {
            "type": "string"
          },
          "citation": {
            "type": "string"
          },
          "confidence": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          }
        }
      }
    },
    "open_questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
